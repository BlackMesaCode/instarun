<Window x:Class="InstaRun.SearchManagement.SearchBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaRun.SearchManagement"
        mc:Ignorable="d"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        SizeToContent="Height"
        ResizeMode="NoResize"
        Width="200"
        FontSize="18"
        SnapsToDevicePixels="True"
        WindowStyle="None"
        BorderThickness="0"
        Deactivated="Window_Deactivated"
        ContentRendered="Window_ContentRendered"
        Title="SearchBox">
    <Grid>
        <TextBox Name="SearchTextBox" BorderThickness="2" Padding="4" CharacterCasing="Lower" TextChanged="SearchTextBox_TextChanged" KeyDown="SearchTextBox_KeyDown" AcceptsReturn="False" AcceptsTab="False" Loaded="SearchTextBox_Loaded"/>
    </Grid>
</Window>
